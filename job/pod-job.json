{
  "apiVersion": "batch/v1",
  "kind": "Job",
  "metadata": {
    "name": "counterjob"
  },
  "spec": {
    "template": {
      "metadata": {
        "name": "counterjobpod"
      },
      "spec": {
        "containers": [
          {
            "name": "counterJobPod",
            "image": "rkp201/k8s-spring-app:1.6"
          }
        ],
        "restartPolicy": "Never"
      }
    }
  }
}
